{% extends('base.html.twig') %}

{% block body %}
    <div id="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-auto">
                    {{ block("sidebar", 'base.html.twig') }}
                </div>

                <div class="col">

                    <table class="table table-stripped">
                        <h2>Lista pracowników</h2>
                        {{  block ('flashmessage', ('base.html.twig')) }}
                        <thead class="thead-dark">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Nazwa Użytkownika</th>
                            <th scope="col">Imie</th>
                            <th scope="col">Nazwisko</th>
                            <th scope="col">Miasto</th>
                            <th scope="col">Adres</th>
                            <th scope="col">Akcja</th>
                        </tr>
                        </thead>

                        <tbody>

                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.username }}</td>
                                <td>{{ user.name }}</td>
                                <td>{{ user.surname}}</td>
                                <td>{{ user.city}}</td>
                                <td>{{ user.address }}</td>
                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-secondary btn-sm dropdown-toggle m-0" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Wybierz
                                        </button>
                                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                            <a class="dropdown-item" href="{{ path('users.show', {id: user.id}) }}">wyświetl</a>
                                            <a class="dropdown-item" href="{{ path('users.delete', {id: user.id}) }}">usuń</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}

                        }
                        </tbody>
                    </table>
                    <a class="btn btn-info" role="button" href="{{ path('register') }}">Dodaj</a>

                </div>
            </div>
        </div>

    </div>

{% endblock %}