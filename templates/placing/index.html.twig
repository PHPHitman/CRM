{% extends 'base.html.twig' %}
{%  block body %}
    <div id="content">
        <div class="container-fluid">
            <div class="row">

                    <div class="col-md-auto">
                        {{ block("sidebar", 'base.html.twig') }}
                    </div>

            <div class="col">
                <h2>Lista zleceń</h2>

                    {{ block("flashmessage", 'base.html.twig') }}

                    <table class="table  table-striped">

                            <thead class="thead-dark">

                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Klient</th>
                                <th scope="col">Zamówienie</th>
                                <th scope="col">Data dodania</th>
                                <th scope="col">Dodane przez</th>
                                <th scope="col">Status</th>
                                <th scope="col">Akcja</th>
                            </tr>
                            </thead>

                            <tbody>
                            {%  for placing in placings %}
                                <tr>
                                    <td>{{ placing.id }}</td>
                                    <td>{{ placing.company.name}} {{ placing.company.surname }}</td>
                                    <td>{{ placing.service }}</td>
                                    <td>{{ placing.date|date('d.m.Y') }}</td>
                                    <td>{{ placing.addedby }}</td>
                                    <td>{{ placing.status }}</td>
                                    <td>
                                        <div class="dropdown">
                                            <button class="btn btn-secondary btn-sm dropdown-toggle m-0" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                Wybierz
                                            </button>
                                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                <a class="dropdown-item" href="{{ path('placing.show', {id: placing.id}) }}">wyświetl</a>
                                                <a class="dropdown-item" href="{{ path('placing.delete', {id: placing.id}) }}">usuń</a>
                                            </div>
                                        </div>
                                    </td>


                                </tr>
                            {% endfor %}
                            </tbody>
                    </table>
                <a class="btn btn-info" role="button" href="{{ path('placing.create') }}">Dodaj</a>
                </div>
            </div>
         </div>
    </div>

{%  endblock %}