{% extends('base.html.twig') %}

{% block body %}
    <div id="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-auto">
                    {{ block("sidebar", "crm/index.html.twig") }}
                </div>

                <div class="col">

                    <table class="table table-stripped">
                        <h2>Lista pracowników</h2>
                        {{  block ('flashmessage', ('crm/clients.html.twig')) }}
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Nazwa Użytkownika</th>
                                <th scope="col">Imie</th>
                                <th scope="col">Nazwisko</th>
                                <th scope="col">Miasto</th>
                                <th scope="col">Adres</th>
                                <th scope="col">Szczegóły</th>
                                <th scope="col">Akcja</th>
                            </tr>
                        </thead>

                        <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>{{ user.id }}</td>
                                    <td>{{ user.username }}</td>
                                    <td>{{ user.name }}</td>
                                    <td>{{ user.surname}}</td>
                                    <td>{{ user.city}}</td>
                                    <td>{{ user.address }}</td>
                                    <td>
                                        <a href="{{ path('crm.showuser', {id: user.id}) }}">
                                            Wyświetl
                                        </a>
                                    </td>
                                    <td>
                                        <a href="{{ path('crm.deleteUser', {id:user.id}) }}">
                                            Usuń
                                        </a>
                                    </td>


                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    <a class="btn btn-info" role="button" href="{{ path('register') }}">Dodaj</a>

                </div>
            </div>
        </div>

    </div>

{% endblock %}